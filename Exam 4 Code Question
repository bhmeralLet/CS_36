#include <stdio.h>
#include <string.h>


struct baby{
    int age, dayOfBirth, monthOfBirth, yearOfBirth;
    char firstName[];

};

struct baby babyInfo(){

    struct baby baby1;
    printf("Enter the day of the birth");
    scanf_s("%d",&baby1.dayOfBirth);
    printf("Enter the month of the birth");
    scanf_s("%d",&baby1.monthOfBirth);
    printf("Enter the year of the birth");
    scanf_s("%d",&baby1.yearOfBirth);

    return baby1;
}



void setAge(struct baby* baby){
    int today_sYear = 2021;
    baby->age = (baby->yearOfBirth) - today_sYear;
}


struct baby oldestBaby(struct baby babies[],int arraySize){
    int maxAge = -1000;
    if(maxAge > babies[arraySize].age){
        maxAge = babies[arraySize].age;
    }else if(maxAge == babies[arraySize].age){
        if(babies[arraySize + 1].monthOfBirth > babies[arraySize].monthOfBirth){
            return babies[arraySize + 1];
        }else if(babies[arraySize + 1].monthOfBirth == babies[arraySize].monthOfBirth){
            if(babies[arraySize + 1].dayOfBirth > babies[arraySize].dayOfBirth){
                return babies[arraySize + 1];
            }
        }
    }
    arraySize--;
    return babies[arraySize];
}


int main(){

    struct baby babies[5];
    struct baby oldest_baby;
    for(int baby = 0; baby < (sizeof(babies) / sizeof(struct baby)); baby++){
        babies[baby] = babyInfo();
    }
    for(int baby = 0; baby < (sizeof(babies) / sizeof(struct baby)); baby++){
        setAge(&babies[baby]);
    }

    for(int baby = 0; baby < (sizeof(babies) / sizeof(struct baby)); baby++){
        printf("Baby %d:\n",baby);
        printf("day of birth %d\n",babies[baby].dayOfBirth);
        printf("month of birth %d\n",babies[baby].monthOfBirth);
        printf("year of birth %d\n",babies[baby].yearOfBirth);
    }

    for (int baby = 0; baby < (sizeof(babies) / sizeof(struct baby)); baby++) {
        oldest_baby = oldestBaby(babies,(sizeof(babies) / sizeof(struct baby)));
    }
    printf("\nOldest baby:");
    printf(" year of birth %d\n",oldest_baby.yearOfBirth);
    printf("day of birth %d\n",oldest_baby.dayOfBirth);
    printf("month of birth %d\n",oldest_baby.monthOfBirth);

}