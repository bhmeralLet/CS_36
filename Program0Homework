    char name[] = "Baha";
    int courseID = 60720;
    char csCourses[] = "C Programming\nC++ Programming\nJava Programming";


    printf("My name is %s, I'm in course %d. I've taken:\n%s\n\n\n",name,courseID,csCourses);


    printf("Give me a number:");
    int firstNumber;
    scanf_s("%d",&firstNumber);
    printf("Give me a second number:");
    int secondNumber;
    scanf_s("%d",&secondNumber);

    int sum = firstNumber + secondNumber;
    int difference = firstNumber - secondNumber;
    int product = firstNumber * secondNumber;
    int division = firstNumber / secondNumber;

    printf("\n\nThe sum is %d\n",sum);
    printf("The difference is %d\n",difference);
    printf("The product is %d\n", product);
    printf("The division is %d\n",division);